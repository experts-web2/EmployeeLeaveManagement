@page "/AddEmployee"
@page "/edit/{ID:int}"
@inherits AddEmployeeBase
<h3>AddEmployee</h3>

<EditForm Model="@EmployeeDto" OnValidSubmit="SaveEmployee">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="Name" class="form-label">First Name</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="EmployeeDto.FirstName" />
        </div>
        <ValidationMessage For="@(() => EmployeeDto.FirstName)" />
    </div>
    <div class="mb-3">
        <label for="Address" class="form-label">Last Name</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="EmployeeDto.LastName" />
        </div>
        <ValidationMessage For="@(() => EmployeeDto.LastName)" />
    </div>

    <div class="mb-3">
        <label for="City" class="form-label">Email</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="EmployeeDto.Email" />
        </div>
        <ValidationMessage For="@(() => EmployeeDto.Email)" />
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Address</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="EmployeeDto.Address" />
        </div>
        <ValidationMessage For="@(() => EmployeeDto.Address)" />
    </div>

    <div class="mb-3">
        <label for="Phone" class="form-label">Date Of Birth</label>
        <div class="col-md-4">
            <InputDate class="form-control" @bind-Value="EmployeeDto.DateOfBrith" />
        </div>
        <ValidationMessage For="@(() => EmployeeDto.DateOfBrith)" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>


