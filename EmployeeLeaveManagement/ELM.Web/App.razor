@inject NavigationManager nav
@using ELM.Web.Pages.AuthPage
@using ELM.Web.Pages.AuthPage.LogCredential;

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeView>
                <Authorized>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                </Authorized>
                <Authorizing>
                    <p>Authorizing...</p>
                </Authorizing>
                <NotAuthorized>
                    <LoginDisplay/>
                 @if(new Uri(nav.Uri).AbsolutePath.StartsWith("/RegisterUser"))
                    {
                        <RegisterUser />
                        
                    }
                 else
                    {
                            <SignIn />
                    }
                </NotAuthorized>
            </AuthorizeView>

        </Found>
        <NotFound>
          @*  <LayoutView Layout="@typeof(MainLayout)">*@
        <LayoutView>
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
