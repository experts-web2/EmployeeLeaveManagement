@page "/listofemployee"
@using EmpLeave.Web.Pages.EmployeePage;
@inherits EmployeeListBase
@attribute [Authorize]
<h3>Employees List</h3>

<div class="row">
   
    <div class="input-group mb-3">
        <EditForm Model="Paging" OnValidSubmit="()=>GetAll()">
            <InputText class="form-control" @bind-Value="Paging.Search" />
            <button>Search</button>
        </EditForm>
    </div>
   

    <div class="col-md-6">
        <a href='/addemployee' class="btn btn-primary" role="button">
            <i class="fas fa-user-plus"></i>
            Add Employee
        </a>
    </div>
    <div>
    <RadzenButton Text="Hi"></RadzenButton>
    </div>
</div>
<br />
@if (EmployeeDtoList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped align-middle table-bordered">
        <thead class="table-success">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Current Salary</th>
                <th>Leaves</th>
                <th class="colspan-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in EmployeeDtoList)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.DateOfBrith.ToString("dd/MM/yyyy")</td>
                    <td>@employee.Gender</td>
                    <td>@employee.CurrentSalary</td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" @onclick="()=>SetEmployeeID(employee.ID)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Details
                        </button>
                        @*<a @onclick="()=>SetEmployeeID(employee.ID)"  class="button" data-bs-toggle="model" data-bs-target="#exampleModal" role="button">details</a>*@

                    </td>
                    <td  style="width:15%;">
                        <button style="width: 65px; height: 40px;" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteEmpModal"
                        @onclick="(() => DeleteConfirm(employee.ID))">
                            Delete
                        </button>
                        <a  href='/edit/@employee.ID' style="height:38px;width:58px" class="btn btn-outline-dark" role="button" text-align="center" >
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="deleteEmpModal" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Delete Employee</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>Do you want to delete this Employee?</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>@SelectedEmployee.FirstName</td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td>@SelectedEmployee.Address</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@SelectedEmployee.Email</td>
                            </tr>
                            <tr>
                                <td>Date Of Birth</td>
                                <td>@SelectedEmployee.DateOfBrith</td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td>@SelectedEmployee.Gender</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" @onclick="(async () => await DeleteEmployee(SelectedEmployee.ID))" data-bs-dismiss="modal">YES</button>
                    <button class="btn btn-warning" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Leaves Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @if (SelectedEmployee == null || SelectedEmployee.leaves == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <div class="modal-body">
                    <h2>@SelectedEmployee.FirstName @SelectedEmployee.LastName</h2>
                    <table class="table table-striped align-middle table-bordered">
                        <thead class="table-success">
                            <tr>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Status</th>
                                <th>Leave Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var leave in SelectedEmployee.leaves)
                            {
                                <tr>
                                    <td>@leave.StartTime</td>
                                    <td>@leave.EndTime</td>
                                    <td>@leave.Status</td>
                                    <td>@leave.leaveEnum</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<Pagination ChangePage="GetAll"
            CurrentPage="Paging.CurrentPage"
            HasNext="Paging.HasNext"
            HasPrevious="Paging.HasPrevious"
            TotalPages="Paging.TotalPages" />