@page "/listofemployee"
@using EmpLeave.Web.Pages.EmployeePage;
@inherits EmployeeListBase
@attribute [Authorize]
<h3>ListOfEmployee</h3>

<div class="row">

    <div class="col-md-6">
        <a href='/addemployee' class="btn btn-primary" role="button">
            <i class="fas fa-user-plus"></i>
            Add Employee
        </a>
    </div>
</div>
<br />
@if (EmployeeDtoList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped align-middle table-bordered">
        <thead class="table-success">
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Address</th>
                <th>Email</th>
                <th>DateOfBirth</th>
                <th>Gender</th>
                <th>Leaves</th>
                <th class="colspan-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in EmployeeDtoList)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.DateOfBrith</td>
                    <td>@employee.Gender</td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" @onclick="()=>SetEmployeeID(employee.ID)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Details
                        </button>

                    </td>
                    <td>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteEmpModal"
                        @onclick="(() => DeleteConfirm(employee.ID))">
                            Delete
                        </button>
                        <a href='/edit/@employee.ID' class="btn btn-outline-dark" role="button">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="deleteEmpModal" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Delete Employee</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>Do you want to delete this Employee?</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>@SelectedEmployee.FirstName</td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td>@SelectedEmployee.Address</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@SelectedEmployee.Email</td>
                            </tr>
                            <tr>
                                <td>Date Of Birth</td>
                                <td>@SelectedEmployee.DateOfBrith</td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td>@SelectedEmployee.Gender</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" @onclick="(async () => await DeleteEmployee(SelectedEmployee.ID))" data-bs-dismiss="modal">YES</button>
                    <button class="btn btn-warning" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Leaves Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @if (SelectedEmployee == null || SelectedEmployee.leaves == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <div class="modal-body">
                    <h2>@SelectedEmployee.FirstName @SelectedEmployee.LastName</h2>
                    <table class="table table-striped align-middle table-bordered">
                        <thead class="table-success">
                            <tr>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Status</th>
                                <th>Leave Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var leave in SelectedEmployee.leaves)
                            {
                                <tr>
                                    <td>@leave.StartTime</td>
                                    <td>@leave.EndTime</td>
                                    <td>@leave.Status</td>
                                    <td>@leave.leaveEnum</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @* <nav aria-label="Page navigation example">*@
    <ul class="pagination">

        <li class="page-item @(Paging.HasPrevious?"":"disabled")"><a class="page-link" @onclick="()=>GetAll(Paging.CurrentPage-1)">Previous</a></li>
        @for (int i = 1; i <= Paging.TotalPages; i++)
        {
            if (i == Paging.CurrentPage)
            {
                <li class="page-item active"><a class="page-link " @onclick="()=>GetAll(i-1)" >@i</a></li>

            }
            else
            {
                <li class="page-item"><a class="page-link" @onclick="()=>GetAll(i-1)">@i</a></li>

            }
        }
        <li class="page-item @(Paging.HasNext?"":"disabled")"><a class="page-link" @onclick="()=>GetAll(Paging.CurrentPage+1)">Next</a></li>
    </ul>
</div>

